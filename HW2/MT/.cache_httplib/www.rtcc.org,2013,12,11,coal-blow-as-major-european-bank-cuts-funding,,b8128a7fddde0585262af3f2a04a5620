        jQuery(document).ready(function() {
       
            //Mobile & Tablet ==> Reset nav menu when the device is oriented
            $(window).resize(function(){
            	if ($(window).width() >= 960){	
                    $('#wrapper').removeClass('canvas-slid');
                    $('body').removeAttr('style');
                    $('.canvas').removeAttr('style');
                    $('.navbar').removeAttr('style');
            	}	
            });
            //Perfect Scrollbar
            $('.tab-pane').perfectScrollbar();
            $('#myTabs a').click(function (e) {
              e.preventDefault()
              $(this).tab('show')
              $('.tab-pane').perfectScrollbar('update');
            })  
            
            //reco Scrollbar
            $('.recocontent').perfectScrollbar();
            
            //Time Ago
            jQuery("time.time").timeago();
            
                            $('.wp-caption').removeAttr('style');
                $('.aligncenter').removeAttr('style');
                $('#post iframe').parent().addClass("embed-responsive embed-responsive-16by9");
                    });
    
        
        //Resize tab-pane
        $(window).bind("load resize", function(){  
            var height=$(window).height()-42;
            $('.tab-pane').height(height);
        });
        $(function() {
            $('.tab-pane').css({"height": ($(window).height()-42)+"px" });
            $('.tab-pane').perfectScrollbar();
        });                   
        
    </script>
