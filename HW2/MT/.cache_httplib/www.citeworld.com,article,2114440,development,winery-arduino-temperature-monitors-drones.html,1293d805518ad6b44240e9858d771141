	function encodeQueryData(params) {
		var ret = [];
		for (var paramKey in params) {
			ret.push(encodeURIComponent(paramKey) + "=" + encodeURIComponent(params[paramKey]));
		}
		return ret.join("&");
	}
	$(document).ready(function() {
		$(document).on("click","#email-icon",function(event) {
