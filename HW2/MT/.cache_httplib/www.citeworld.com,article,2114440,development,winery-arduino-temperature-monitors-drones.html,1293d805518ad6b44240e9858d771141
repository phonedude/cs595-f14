<script type="text/javascript">
$(document).ready(function() {
	$('.embeddedVideo').each(function(idx, item) {
		var id = $(item).attr('id');
		var vid = id.replace("vid", "");
		var width = $(item).attr('width');
		var height = $(item).attr('height');
		var videoIframeUrl = window.location.protocol + "//" + window.location.hostname + (window.location.port ? ":" + window.location.port: "") + "/video/iframe/" + vid + "/iframe.html";
		$(item).replaceWith("<iframe width=\"" + width + "\" height=\"" + height + "\" src=\"" + videoIframeUrl + "\" frameborder=\"0\" scrolling=\"no\" ></iframe><br clear=\"all\" />");
	});
});
</script>
	
	
	
	




							










						
					
				
