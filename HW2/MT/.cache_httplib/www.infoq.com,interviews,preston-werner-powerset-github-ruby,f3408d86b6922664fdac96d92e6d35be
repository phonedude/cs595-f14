    <script type="text/javascript">
        function addLoginInfo(link){
            var v = $('#loginWidgetOrigin').val();
            if(v !== undefined && v != ''){
                addOrigin(link);
                link.href += '%23' + v;
                return true;
            } else {
                return addOrigin(link);
            }
        }
    </script>
