function createSlider(id, name) {
    var t;
    t = dojo.cookie("sliderVis_value");
    lconn.blogs.tags.minVisThreshold = typeof t == "undefined" ? 0 : Math.max(Math.min(parseFloat(t), 100), 0);
    var slider = new dijit.form.HorizontalSlider({name: name, value: lconn.blogs.tags.minVisThreshold, minimum: 0, maximum: 100, pageIncrement: 1, showButtons: false, intermediateChanges: true, style: "height: 17px; float: left; padding-top: 5px; width:100%;", onChange: function (value) {lconn.blogs.tags.updateTagVis(value);}}, id);
	}

