<script type="text/javascript">
function toggleSection(obj) {
    var el=dojo.byId(obj.id+'_section');
    if(el.style.display!="none"){
           dojo.removeClass(obj.id+'_div', 'ibm-show-hide-open');
           dojo.addClass(obj.id+'_div', 'ibm-show-hide');
           new dojo.fx.Toggler({node:el,showDuration:500,showFunc:dojo.fx.wipeOut}).show();
           //dojo.style(obj.id, 'background-position', '100% -239px');
           //ctlObject.className="lotusSprite lotusArrow lotusTwistyClosed";
    }else{
            dojo.removeClass(obj.id+'_div', 'ibm-show-hide');
            dojo.addClass(obj.id+'_div', 'ibm-show-hide-open');
           new dojo.fx.Toggler({node:el,showDuration:500,showFunc:dojo.fx.wipeIn}).show();
           //dojo.style(obj.id, 'background-position', '100% -349px');
           //ctlObject.className="lotusSprite lotusArrow lotusTwistyOpen";
    }
}
</script>
