<script type="text/javascript" language="Javascript">
    var refresh_url = document.getElementById('REFRESH_URL');
    var this_url = window.location.toString();
    var this_url_anchor_idx = this_url.lastIndexOf('#');
    if(this_url_anchor_idx == -1) {
        refresh_url.href = this_url;
    }
    else {
        refresh_url.href = this_url.substring(0, this_url_anchor_idx);
    }
    var blogsUser = currentLogin.name ? currentLogin.name : null;
    var headerUserName = document.getElementById("headerUserName");
    var logoutLink = document.getElementById("logoutLink");
    var helpLink = document.getElementById("headerHelpLink");

        if (helpLink != null) {
        helpLink.href = "javascript:openHelpWindow('/roller-ui/blog/help/?lang=en_us')";
    }

    if (null == blogsUser || blogsUser == '') {
        if (headerUserName != null) headerUserName.innerHTML = "";
            if (logoutLink != null) {
                logoutLink.innerHTML = "Log In";
                logoutLink.href = "/connections/blogs/roller-ui/login-redirect.jsp?redirect=" + escape(window.location);
            }
        }
        else{
            if (headerUserName != null) {
                headerUserName.innerHTML = blogsUser;                      
                var welcomeUserText = document.getElementById('headerUserText');
                welcomeUserText.style.display = 'inline';          
                document.getElementById('headerHelpLi').className = '';        
            }
            if (logoutLink != null) {
                logoutLink.innerHTML = "Log Out";
                logoutLink.href = "/connections/blogs/roller-ui/logout-redirect.jsp";       
            }
        }
</script>

