<script>
function getTimeStamp(dateText) {           
    var dateTextArr=dateText.split(" ");
    var YMD=dateTextArr[0].split("-");
    var year=YMD[0];
    var month=Math.ceil(YMD[1])-1;
    var day=YMD[2];                 
    var MHS=dateTextArr[1].split(".")[0].split(":");
    var minutes=MHS[1];
    var seconds=MHS[2];
    var hours=MHS[0];
    var dateObj=new Date(year,month,day,hours,minutes,seconds);
    return(Date.parse(dateObj));
}
  dojo.addOnLoad(function(){
        dojo.query('.entryContentContainer img').forEach(
            function(item){
                if(item.style != undefined && item.style.width != undefined &&
                    item.style.width == "100%")
                    return; 
                if (item.width > 400 && item.complete) {
                    item.height = item.height * (400/item.width);
                    item.width = 400;
                }
                if(!item.complete){
                    item.onload = function(){
                            if (this.width > 400) {
                            this.height = this.height * (400/this.width);
                            this.width = 400;
                        }
                    };
                }
            }
        );
  });
  </script>
                
