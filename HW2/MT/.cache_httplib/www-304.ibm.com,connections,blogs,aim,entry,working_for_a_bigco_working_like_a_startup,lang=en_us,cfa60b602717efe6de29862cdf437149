                <script>
                    function showFeedTip() {
                        showDialog("Right-click and select Copy Shortcut to get the URL to this feed.");//alert
                    }
                   
                    function jumpToPage(to, max) {
                        if(to > max) {
                            to = max;
                        }
                    
                        if(to < 1) {
                            to = 1;
                        }
                    
                        to = to - 1;
                        var base = "https://www-304.ibm.com/connections/blogs/aim?maxresults=10&sortby=0&lang=en_us";
                        window.location = base + "&page=" +  to;
                    }

                    function goToSubmitFeedback(obj){
                        var url=window.location.href;   
                        //var serverAndPort=document.location.host; 
                        var context='/blogs';   
                        var protocolServerAndPort=url.substring(0,url.indexOf(context));
                        var typeValue = "Submit Feedback";
                        obj.href=protocolServerAndPort+context+"/feedback/gotofeedback.do"+"?feedbackType="+typeValue+"&returnTo="+url;
                    }

                    function goToreportInappropriateCont(obj){
                              //console.log(" this is " + obj.firstChild.nodeValue);    
                        //console.dir(obj);
                        var url=window.location.href;   
                        //var serverAndPort=document.location.host; 
                        var context='/blogs';   
                        var protocolServerAndPort=url.substring(0,url.indexOf(context));    
                              var typeValue = "Report Inappropriate content";   
                        obj.href=protocolServerAndPort+context+"/feedback/gotofeedback.do"+"?feedbackType="+typeValue+"&returnTo="+url; 
                    }
                </script>
