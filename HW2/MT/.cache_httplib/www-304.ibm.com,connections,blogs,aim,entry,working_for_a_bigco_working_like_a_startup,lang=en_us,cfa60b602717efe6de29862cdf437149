	window.SemTagSvc = "";
	var livetextCfg = [];

	var profilesBizCardConfig = {id: "hcard", match:".vcard", processEnclosedTags:false, tagHandler: lconn.profiles.bizCard.bizCard, loaded: true};
	profilesBizCardConfig.baseURL = 'http://www-304.ibm.com/profiles';
	livetextCfg.push(profilesBizCardConfig);
			var communitiesBizCardConfig = {id: "hgroup", match:".vcomm", processEnclosedTags:false, tagHandler: lconn.communities.bizCard.bizCard, loaded: true};
    communitiesBizCardConfig.baseURL = 'http://www-304.ibm.com/communities';
    livetextCfg.push(communitiesBizCardConfig);
		
	lconn.core.bizCard.bizCardUtils.init();
	lconn.core.utilities.processUntilAvailable(function(){SemTagSvc = new com.ibm.mm.livetext.serviceImpl(); SemTagSvc.init();}, "window.lc_default");
loaded_quickFix=true;
 });

});

setTimeout(function(){
if(loaded_quickFix==false){
	var SemTagSvc_proxyURL = 'http://www-304.ibm.com/connections/blogs/ajaxProxy';
