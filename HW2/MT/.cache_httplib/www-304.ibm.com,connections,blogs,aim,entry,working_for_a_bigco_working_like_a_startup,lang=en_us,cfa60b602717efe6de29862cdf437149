                                <div id="blogAuthors" style="overflow:hidden"></div>
                                <script language="javascript">
                                    var blogAuthors = dojo.byId('blogAuthors');
                                    var authorPageSize = 3;
                                    blogAuthors.getUserPhotoURL = function(relative) {
                                                                                                                            return 'https://www-304.ibm.com/connections/profiles' + relative;
                                                                            };
                                    blogAuthors.render = function(data, reload) {
                                        var i = 0, s = '';                    
                                        var prevlink = undefined, nextlink = undefined, baselink = '/connections/blogs/roller-services/json/authors?weblog=3404f8c4-d29c-4d8e-a7dd-f93b13530a6b&ps='+authorPageSize+'&offset={0}&lang=en_us';
                                        if(data.offset > 1) 
                                            prevlink = "javascript:dojo.byId('blogAuthors').load('" + baselink.replace("{0}", (data.offset - authorPageSize))  + "')";
                                        if(data.end < data.total) 
                                            nextlink = "javascript:dojo.byId('blogAuthors').load('" + baselink.replace("{0}", (data.offset + authorPageSize)) + "')";                            
                                        s+= '<table width="100%"><tr><td style="text-align: center;"><a title="Previous" onclick="'+(prevlink ?prevlink : '')+ '" href="javascript:void(0);"><img class="lotusSprite lotusArrow lotusScrollUp" style="display: inline;" alt="Previous" src="/connections/blogs/nav/common/styles/images/blank.gif"/><span class="lotusAltText">Previous</span></a></td></tr></table>';
                                        for(; i < data.authors.length; i++) {
                                       var o = data.authors[i];
                                            s += ['<table width="100%" style="border-style: solid; border-color: rgb(204, 203, 203); border-width: 1px 0px 0px;">',
                                                    '<tr><td class="lotusAlignLeft" style="padding: 0px 5px; vertical-align: middle; width: 45px;">',
                                                    '<img alt="photo" width="45" height="45" src="', this.getUserPhotoURL(o.photo), '"></td>',
                                                    '<td class="lotusAlignLeft" style="vertical-align: middle; height: 50px;"><span class="vcard">',
                                               '<a class="person fn lotusPerson" href="/connections/blogs/roller-ui/blog/', encodeURIComponent(o.userIDForDisplay), '?lang=en_us">', o.fullName, '</a>',
                                               '<span class="x-lconn-userid" style="display:none">', o.extid, '</span>', 
                                               o.emailAddress? ('<span class="email" style="display:none">' + o.emailAddress + '</span>') : '',
                                                    '</span></td></tr></tbody></table>'
                                            ].join('');
                                        }
                                        s+= '<table width="100%"><tr><td style="text-align: center;"><a title="Next" onclick="'+(nextlink ?nextlink : '')+ '" href="javascript:void(0);"><img class="lotusSprite lotusArrow lotusScrollDown" style="display: inline;" alt="Next" src="/connections/blogs/nav/common/styles/images/blank.gif"/><span class="lotusAltText">Next</span></a></td></tr></table>';
                                        s += ['<table width="100%"><tr>', 
                                                '<td class="lotusAlignLeft" style="padding: 0px 5px; vertical-align: middle; width: 50%;"><span>', dojo.string.substitute(  '${0} - ${1} of ${2} authors', [data.offset, data.end, data.total]), '</span></td>',
                                                '</tr></tbody></table>'
                                                ].join('');
                                        dojo.byId('blogAuthors').innerHTML = s;  
                                        dojo.byId('authors_loading').style.display = 'none';                       
                                        if(typeof(SemTagSvc) != "undefined" && reload) {
                                            SemTagSvc.parseDom(null, dojo.byId('blogAuthors'));
                                        }
                                    };
                                    blogAuthors.load = function(url) {
                                        dojo.byId('authors_loading').style.display = '';
                                        dojo.xhrGet({url: url, handleAs: 'json', load: function(data){dojo.byId('blogAuthors').render(data, true);}, error: function(err){dojo.byId('authors_loading').style.display = 'none';}});
                                    };
