<script type="text/javascript">
  var timer, timer1;
  function populateDropDown() {
    $("#drpcategory").msDropDown({ mainCSS: 'searchDDL' });
    $("#mainSearchBox").css("color", "#666666");
    try {
      $("#mainSearchBox").autocomplete({
      source: function (request, response) {
      $("#mainSearchBox").css("color", "#666666");
      $.ajax({
      url: "/sitesearchHandler.ashx",
      dataType: "json",
      contentType: "application/json; charset=utf-8",
      data: {
      type: "autocomplete",
      namestartsWith: request.term,
      superCatID: $('#drpcategory').val().split('-')[0] //getting the supercategoryID;
      },
      success: function (data) {
      response($.map(data, function (item) {
      return {
      label: item.Name,
      value: item.SEName
      };
      }));
      }
      });
      },
      minLength: 2,
      select: function (event, ui) {
      window.location.href = '/Search/st/' + encodeURIComponent(ui.item.value) + '/' + $('#drpcategory').val();
      },
      open: function () {
      $(this).removeClass("ui-corner-all").addClass("ui-corner-top");
      },
      close: function () {
      $(this).removeClass("ui-corner-top").addClass("ui-corner-all");
      }
      });
      } catch (e) {}

  //Initiallizing the collapse
  animatedcollapse.addDiv('divAnkShoppingbag', 'fade=0,speed=400,group=pets,hide=1');
  animatedcollapse.addDiv('divAnkShoppingbag1', 'fade=0,speed=400,group=pets,hide=1');
  animatedcollapse.addDiv('ankMyaccount', 'fade=0,speed=400,group=pets,hide=1');
  animatedcollapse.addDiv('d3', 'fade=0,speed=400,group=pets,hide=1');
  animatedcollapse.addDiv('d4', 'fade=0,speed=400,group=pets,hide=1');
  animatedcollapse.addDiv('d5', 'fade=0,speed=400,group=pets,hide=1');
  animatedcollapse.addDiv('d7', 'fade=0,speed=400,group=pets,hide=1');
  animatedcollapse.init();
  animatedcollapse.ontoggle = function ($, divobj, state) {
  if (divobj != null) {
  if (divobj.id == 'd7') {
  if (state == 'block') {
  $("#ankFindRegistry").unbind("mouseout");
  $("#ankFindRegistry").unbind("mouseover");
  $('#divFindRegistry').hide().css("visibility", "hidden");
  $("#ankFindRegistry").addClass('selected');

  } else {
  $("#ankFindRegistry").bind("mouseover", function () {
  $('#divFindRegistry').show().css("visibility", "visible");

  }).bind("mouseout", function () {
  $('#divFindRegistry').hide().css("visibility", "hidden");
  });
  $("#ankFindRegistry").removeClass('selected');
  }
  }

  //setting the timer for both my account & shopping bag
  if (divobj.id == "divAnkShoppingbag" && state == "block") {
  timer = setTimeout(function () { closeAccount("divAnkShoppingbag"); }, 5000);
  } else
  clearTimeout(timer);
  if (divobj.id == "divAnkShoppingbag1" && state == "block") {
  timer = setTimeout(function () { closeAccount("divAnkShoppingbag1"); }, 5000);
  } else
  clearTimeout(timer);

  if (divobj.id == "ankMyaccount" && state == "block") {
  timer1 = setTimeout(function () { closeAccount("ankMyaccount"); }, 5000);
  } else
  clearTimeout(timer1);

  if (divobj.id == "ankbrowseCategory" && state == "block") {
  $('#addItemsToRegistry').removeClass('close');
  } else
  $('#addItemsToRegistry').addClass('close');
  }
  if ($("#ankbrowseCategory").css("display") == "block") {
  $("#addItemsToRegistry").removeClass("close");
  }
  };


  // prevent ctrl click for popup windows
  $("a").click(function (e) {
    if (e.ctrlKey) {
    var u = $(this).attr('href').toLowerCase();
    if (u.indexOf("void(0)") >= 0)
    e.preventDefault();
  }
  });
  }
</script>
