			$(document).ready(function() {
					var isMobile;
				 browserWidth(this);
			});
			
			$(window).resize(function () {   
					if ($(this).width() > 767) {
													$("#nav").css('display', '');
													$("#topBarLeft").css('display', '');
													isMobile = false;
					} else {
													isMobile = true;
					}
			});
			
			function browserWidth(browser){
					if ($(browser).width() > 767) {
													isMobile = false;
					} else {
													isMobile = true;
					}
			}
			
			function displayElement(obj, state){
					$(obj).css('display', state);
			}
			
			
			$("#miniNavBtn").click(function () {
					$("#globalMegaMenu").css('display', 'none');                     
					if ($("#nav").is(":hidden"))
					{
													displayElement("#nav", 'block');
					}
					else
					{
													displayElement("#nav", '');
					}
			});

			$("#miniSocialBtn").click(function () {
					$("#globalMegaMenu").css('display', 'none');                                                     
					if ($("#topBarLeft").is(":hidden"))
					{
													displayElement("#topBarLeft", 'block');
					}
					else
					{
													displayElement("#topBarLeft", '');
					}
			});
			
			function toggle(obj) {
					if (isMobile){
													$("#topBarLeft").css('display', 'none');
													$("#nav").css('display', 'none');
					} else {
													$("#topBarLeft").css('display', 'block');
													$("#nav").css('display', 'block');
					}

					var el = document.getElementById(obj);
					if ( el.style.display != 'block' ) {
													el.style.display = 'block';
					}
					else {
													el.style.display = 'none';
					}
			}
                                
                </script>

