			(function( $ ){
				$.fn.karmaSort = function( prefix, lst, count, comment_id, votes ) {
					for ( var x = 0; x < lst.length; x++ ) {

						var new_placement = $( '#' + prefix + lst[ x ] );

						new_placement.hide();
						if ( lst[ x ] == comment_id ) {
							$( 'span.vote-count', new_placement ).text( count + ' votes' );
							$( 'span.votes-left' ).text( votes + '' );
						}

						$( this ).append( new_placement );
						new_placement.fadeIn( 'fast' );
					}
				};
			})( jQuery );

			( function( window, $ ) {
				var document = window.document;

				var comment_karma = function() {

					var self = this, spinner = $( '<img class="spinner" src="data:image/gif;base64,">' );

					$(document).ready(function( $ ){

						$( 'a.comment-upvote' ).on( 'click', function( e ){

							var $this = $( this ), parent = $this.parents( 'ol' );

							$( spinner ).appendTo( $this );

							e.preventDefault();
							var data = {
											action     : 'upvote_comment',
											comment_id : $( this ).data( 'comment-id' ),
											post_id    : $( '#comment_post_ID' ).val()
										};
							console.log( data );

							$.post( 'http://scottberkun.com/wp-admin/admin-ajax.php', data, function( response ) {
								if ( 1 === response.status_code ) {
									if ( window.console )
										console.log( response );
									$( 'img.spinner', $this ).remove();
									parent.karmaSort( 'li-comment-', response.comment_order, response.karma, data.comment_id, response.votes_left );
								} else {
									$( 'img.spinner', $this ).remove();
									if ( window.console )
										console.log( response );
								}
							}, 'json' );

						});

					});
				};

				window.comment_karma = new comment_karma();

			} )( window, jQuery );
