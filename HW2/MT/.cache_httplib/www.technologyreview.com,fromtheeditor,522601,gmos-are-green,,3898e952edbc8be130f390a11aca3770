jQuery(document).ready(function() {
  // See if the referrer is tr.com.
  var regex = new RegExp("^https?://(?:[^/]+\.)?technologyreview\.com(/.*)", "i");
  if (document.referrer) {
    var match = regex.exec(document.referrer);
    if (match != null) {
      var nodeUrl = "\/fromtheeditor\/522601\/gmos-are-green\/";
      // Make sure the referrer doesn't start with the node URL.
      if (match[1].substr(0, nodeUrl.length) != nodeUrl) {
        // Open the paywall.
        var paywallUrl = "\/paywall\/?paywall#nid=522601\u0026destination=node%2F522601";
        paywallUrl += (paywallUrl.match(/#/) ? "&" : "#") + "back=" + encodeURIComponent(document.referrer);
