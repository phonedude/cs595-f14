  <div class="block">
    <ul class="post-list">
      
        <li><article
  data-id="3036262"
  class="node teaser-view sidebar kind-article site-fastcodesign slug-fastcodesign">

  
    
      <h4 class="supertag subheader">
        <a href="http://www.fastcodesign.com">Co.Design</a>
      </h4>
    
  

  <figure class="poster">
      
        
          
            <h4 class="slug subheader">
              
              <a class="fastcodesign dark" href="http://www.fastcodesign.com">
                <img src="//e.fastcompany.net/multisite_files/fastcompany/static/sites/201409/1513/images/svg/fastcodesign-dark-notxt.svg" width="30" height="30">
              </a>
              
            </h4>
          
        
      

      
