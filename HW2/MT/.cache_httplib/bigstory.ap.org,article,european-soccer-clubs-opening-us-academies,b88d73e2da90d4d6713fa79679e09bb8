             imgArray[2] = '<a class="open_gallery" href="http://binaryapi.ap.org/7a50a37f773a4de28dfe206d14807132/460x.jpg" title="In this Thursday, Aug. 1, 2014 photo, Toby Rafique, 6, right, of Dallas, yells as he falls to the ground during a soccer camp held by FC Barcelona in Miami. European clubs like Barcelona, Liverpool and Arsenal have long sent coaches to work at U.S. summer camps, but now some are opening year-round U.S. academies aimed at finding new talent but also to expand their fan bases. This is part of a number of initiatives of major teams to grow their brands in the U.S. (AP Photo/Lynne Sladky)"><img src="http://binaryapi.ap.org/7a50a37f773a4de28dfe206d14807132/460x.jpg" alt="Soccer Schools" title="Soccer Schools" /></a>'; 
             imgArray[3] = '<a class="open_gallery" href="http://binaryapi.ap.org/46e08debdff7483eb298a65cc3823152/460x.jpg" title="In this Thursday, Aug. 1, 2014 photo, children participate in a soccer camp held by FC Barcelona in Miami. European clubs like Barcelona, Liverpool and Arsenal have long sent coaches to work at U.S. summer camps, but now some are opening year-round U.S. academies aimed at finding new talent but also to expand their fan bases. This is part of a number of initiatives of major teams to grow their brands in the U.S. (AP Photo/Lynne Sladky)"><img src="http://binaryapi.ap.org/46e08debdff7483eb298a65cc3823152/460x.jpg" alt="Soccer Schools" title="Soccer Schools" /></a>'; 
             imgArray[4] = '<a class="open_gallery" href="http://binaryapi.ap.org/0663aae2b8e54312abfcdc37eb3471b7/460x.jpg" title="In this Thursday, Aug. 1, 2014, photo, children&#39s shoes are shown as children take a break during a soccer camp held by FC Barcelona in Miami. European clubs like Barcelona, Liverpool and Arsenal have long sent coaches to work at U.S. summer camps, but now some are opening year-round U.S. academies aimed at finding new talent but also to expand their fan bases. This is part of a number of initiatives of major teams to grow their brands in the U.S. (AP Photo/Lynne Sladky)"><img src="http://binaryapi.ap.org/0663aae2b8e54312abfcdc37eb3471b7/460x.jpg" alt="Soccer Schools" title="Soccer Schools" /></a>'; 
             imgArray[5] = '<a class="open_gallery" href="http://binaryapi.ap.org/1db01f2c2d32426c9c3970db5663c902/460x.jpg" title="In this Thursday, Aug. 1, 2014, photo, Toby Rafique, 6, left, of Dallas, fights for the ball during a soccer camp held by FC Barcelona in Miami. European clubs like Barcelona, Liverpool and Arsenal have long sent coaches to work at U.S. summer camps, but now some are opening year-round U.S. academies aimed at finding new talent but also to expand their fan bases. This is part of a number of initiatives of major teams to grow their brands in the U.S. (AP Photo/Lynne Sladky)"><img src="http://binaryapi.ap.org/1db01f2c2d32426c9c3970db5663c902/460x.jpg" alt="Toby Rafique" title="Toby Rafique" /></a>'; 
             
