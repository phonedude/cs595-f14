          var $links = $("#footer ul");
          $links.find("li").last().attr("class", ""); // remove class from last el
          $links.append('<li class="last"><a href="#consentManager">Cookie Preferences</a></li>');
          return $links.last();
        }
      });
    }
  }
  );
</script>
