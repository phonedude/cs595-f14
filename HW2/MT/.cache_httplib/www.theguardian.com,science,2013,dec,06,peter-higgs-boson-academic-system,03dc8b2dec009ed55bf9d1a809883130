        var getCookieValue = function (cookieName) {
            var regexp = new RegExp(cookieName + "=([^;]*)")
            var cookieMatch = document.cookie.match(regexp);
            if (cookieMatch && cookieMatch.length > 1) {
                return unescape(cookieMatch[1]);
            }
            return "";
        }

