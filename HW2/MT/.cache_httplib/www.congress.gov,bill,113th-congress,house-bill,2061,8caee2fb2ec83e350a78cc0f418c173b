                $('.dialog_link', $(this).parents('li')).focus();
            },
            buttons: {
                "Close": function(){
                    $(this).dialog("close");
                }
            }
        });

        var timerid;
        $(window).resize(function () {
            (timerid && clearTimeout(timerid));
            timerid = setTimeout(function () {
                $("#cboEstimate").dialog("option","width",$(window).width()*0.9);
