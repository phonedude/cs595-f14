    $( document ).ready( function() {
      if( $( 'body' ).hasClass( 'article-detail') ){
        $('.article_body .inline-type-photo figure a.poppable').magnificPopup({type: 'image', gallery: false});
        $('.article_body .inline-type-graphic figure a.poppable').magnificPopup({type: 'image', gallery: false});
