        $('.blog_detail .blog_post .inline-type-blog-image figure a').magnificPopup({type: 'image', gallery: false});
        $('.blog_detail .blog_post_body .inline-type-blog-image figure a.poppable').magnificPopup({type: 'image', gallery: false});
