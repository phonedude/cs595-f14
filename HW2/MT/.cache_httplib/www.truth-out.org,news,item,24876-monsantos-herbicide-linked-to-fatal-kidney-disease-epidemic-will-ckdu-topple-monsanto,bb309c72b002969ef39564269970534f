function showComments() {
document.getElementById('example-show').style.display = 'none';
document.getElementById('example-hide').style.display = 'block';
if (navigator.appCodeName == 'Mozilla') {
document.getElementById("example").style.position="static";
} else {
document.getElementById('example').style.display = 'block';
}
}
function hideComments() {
document.getElementById('example-show').style.display = 'block';
document.getElementById('example-hide').style.display = 'none';
if (navigator.appCodeName == 'Mozilla') {
document.getElementById("example").style.position="absolute";
document.getElementById("example").style.top="-65535px";
document.getElementById("example").style.left="-65535px";
} else {
document.getElementById('example').style.display = 'none';
}
}
hideComments();
function showHide(shID) {
	if (document.getElementById('example-show')) {
		if (document.getElementById('example-show').style.display != 'none') {
			document.getElementById('example-').style.display = 'none';
			document.getElementById(shID).style.display = 'block';
		}
		else {
			document.getElementById(shID+'-show').style.display = 'inline';
			document.getElementById(shID).style.display = 'none';
		}
	}
}
</script>
