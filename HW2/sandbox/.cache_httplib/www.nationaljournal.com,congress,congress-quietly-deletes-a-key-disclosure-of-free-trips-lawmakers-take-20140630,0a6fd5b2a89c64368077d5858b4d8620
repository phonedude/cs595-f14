<article id="article2014"
    data-classname="article"
    data-id="526991"
    data-channelid="13"
    data-query="((classname:(article slideshow) AND includeinriver:true) (classname:(photo video) AND embedonly:false)) AND workflowstate:(published publishedModified) AND (channelid:13 OR vertical:congress)"
