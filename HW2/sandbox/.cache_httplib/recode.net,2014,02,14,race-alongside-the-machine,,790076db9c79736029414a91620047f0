<script type="text/javascript">
// --- page-specific settings ------------------------------------------
janrain.settings.capture.flowName = 'standard';
janrain.settings.capture.stylesheets = ['http://s0.wp.com/wp-content/themes/vip/recode/css/janrain.css?m=1388396574g'];
//janrain.settings.capture.mobileFlowName = 'mobile';
janrain.settings.capture.mobileStylesheets = ['http://s0.wp.com/wp-content/themes/vip/recode/css/janrain-mobile.css?m=1388396574g'];
janrain.settings.capture.redirectUri = 'http://recode.net';


// --- define event handlers and start the janrain ui ------------------
function janrainCaptureWidgetOnLoad() {
	janrain.events.onCaptureLoginSuccess.addHandler(function(result) {
		janrain.capture.ui.modal.close();

		Recode.profile.doLogin();

		
		
			});

	janrain.events.onCaptureSessionFound.addHandler(function(result) {
		janrain.capture.ui.modal.close();

		Recode.profile.doLogin();

		jQuery('#createprofile').parent().hide();

		
		
			});

	janrain.events.onCaptureRegistrationSuccess.addHandler(function(result) {
		janrain.capture.ui.modal.close();
		Recode.profile.doLogin();
	});

	janrain.events.onCaptureSessionEnded.addHandler(function(result) {
		Recode.profile.doLogout();
		//if ( typeof fyre.conv.logout() == 'function' ) { fyre.conv.logout(); }
	});

	janrain.events.onCaptureSessionNotFound.addHandler(function(result) {
		Recode.profile.doLogout();
			});

	janrain.events.onCaptureScreenShow.addHandler(function(result) {
		if (result.screen == "returnTraditional") {
			//janrainReturnExperience();
		}
	});

	janrain.capture.ui.start();
}

jQuery(function($){
	$('#logoutlink').on('click', function(e) {
		janrain.capture.ui.endCaptureSession();
		$('.profilemenu').hide();
		return false;
	});
});
</script>

<script>
	var authDelegate = new fyre.conv.BackplaneAuthDelegate(window.Backplane);
	authDelegate.login = function() {
		janrain.capture.ui.modal.open();
		Backplane.expectMessages('identity/login');
	};

	authDelegate.logout = function(delegate) {
		janrain.capture.ui.endCaptureSession();
		Backplane.resetCookieChannel();
		fyre.conv.BackplaneAuthDelegate.prototype.logout.call(this, delegate);
		return false;
	};

	authDelegate.viewProfile = function(delegate, author) {
		//console.log(author);
	};

	authDelegate.editProfile = function(delegate, author) {
		window.location = "http://recode.net/profile";
	}
</script>


