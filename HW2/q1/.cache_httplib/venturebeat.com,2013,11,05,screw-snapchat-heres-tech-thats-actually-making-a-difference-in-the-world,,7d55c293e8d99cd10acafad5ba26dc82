<script type="text/javascript">

/**
 * Define Livefyre helper functions.
 */
 function setCookie(name,value,days) {
    if (days) {
        var date = new Date();
        date.setTime(date.getTime()+(days*24*60*60*1000));
        var expires = "; expires="+date.toGMTString();
    }
    else var expires = "";
    document.cookie = name+"="+value+expires+"; path=/";
}
 
function getCookie(name) {
    var nameEQ = name + "=";
    var ca = document.cookie.split(';');
    for(var i=0;i < ca.length;i++) {
        var c = ca[i];
        while (c.charAt(0)==' ') c = c.substring(1,c.length);
        if (c.indexOf(nameEQ) == 0) return c.substring(nameEQ.length,c.length);
    }
    return null;
}
 
function deleteCookie(name) {
    setCookie(name,"",-1);
}

/**
 * Define Gigya-Livefyre interactions.
 */
var gigya_livefyre_debug = false;
var vb_lf_cookieName = 'livefyre_token';
var vb_lf_authDelegate = new fyre.conv.RemoteAuthDelegate();
var livefyre_login_handler;

vb_lf_authDelegate.login = function( handlers ) { // Define Log In Function
	if ( gigya_livefyre_debug ) console.log( 'vb_lf_authDelegate.login(): Gigya-Livefyre Log In Started' );
	vb_gigya_login();
	livefyre_login_handler = handlers;
	return true;
}; // End of Define Log In Function

vb_lf_authDelegate.logout = function( handlers ) { // Define Log Out Function
	if ( gigya_livefyre_debug ) console.log( 'vb_lf_authDelegate.logout(): Gigya-Livefyre Log Out Started' );
	vb_gigya_logout();
	return true;
}; // End of Define Log Out Function

vb_lf_authDelegate.viewProfile = function( handlers, author ) { // Define View Profile Function
	if ( gigya_livefyre_debug ) console.log( 'vb_lf_authDelegate.viewProfile(): Gigya-Livefyre View Profile Event' );
	// Pass this functionality off to Gigya? -- DELETE
}; // End of Define View Profile Function

vb_lf_authDelegate.editProfile = function( handlers, author ) { // Define Edit Profile Function
	if ( gigya_livefyre_debug ) console.log( 'vb_lf_authDelegate.editProfile(): Gigya-Livefyre Edit Profile Event' );
	vb_gigya_edit_account();
	handlers.success();
}; // End of Define Edit Profile Function

function doLivefyreAuth() { // Define doLivefyreAuth() Function
	if ( gigya_livefyre_debug ) console.log( 'doLivefyreAuth(): Gigya-Livefyre Do Authentication Started' );
	var cval = getCookie( vb_lf_cookieName );
	if ( cval ) { // Check for Authentication Cookie
		try { // Try Logging into Livefyre
			fyre.conv.login( cval );
			if ( gigya_livefyre_debug ) console.log( 'doLivefyreAuth(): Logging user in: ', cval );
		} catch ( e ) { // Middle of Try Logging into Livefyre
			if ( gigya_livefyre_debug ) console.log( 'doLivefyreAuth(): Error logging in with cookie: ', vb_lf_cookieName, ' cookie value: ', cval, ' ', e );
		} // End of Try Logging into Livefyre
	} else { // Middle of 
		if ( gigya_livefyre_debug ) console.log( 'doLivefyreAuth(): User is NOT logged in.' );
	} // End of Check for Authentication Cookie
} // End of Define doLivefyreAuth() Function

function vb_gigya_login_listener() {
	if ( gigya_livefyre_debug ) console.log( 'vb_gigya_login_listener(): Logging user in (process started by', ( livefyre_login_handler ? 'Livefyre)' : 'Gigya)' ) );
	jQuery.post( 'https://venturebeat.wordpress.com/wp-admin/admin-ajax.php', { // Retrieve Livefyre Token AJAX Call
		'action'	: 'vb_livefyre_token_request',
		'data'		: vb_gigya_user
	}, function( responseData ) { // Middle of Retrieve Livefyre Token AJAX Call
		if ( gigya_livefyre_debug ) console.log( 'vb_gigya_login_listener(): AJAX Call Success:', responseData );
		if ( responseData.token ) { // Check for Token
			if ( gigya_livefyre_debug ) console.log( 'vb_gigya_login_listener(): User is Being Logged in to Livefyre' );
			setCookie( vb_lf_cookieName, responseData.token, 1 );
			doLivefyreAuth();
			if ( livefyre_login_handler ) { // Check for Livefyre Login Handler
				livefyre_login_handler.success();
			} // End of Check for Livefyre Login Handler
		} else { // Middle of Check for Token
			vb_gigya_livefyre_login_fail( 'User is NOT Being Logged in to Livefyre' );
		} // End of Check for Token
		livefyre_complete_login();
	}, 'json' ).fail(function() { // Middle of Retrieve Livefyre Token AJAX Call
		vb_gigya_livefyre_login_fail( 'Livefyre Token Retrieval AJAX Failure.' );
		livefyre_complete_login();
	}); // End of Retrieve Livefyre Token AJAX Call
}

function livefyre_complete_login() {
	if ( livefyre_login_handler ) { // Check for Livefyre Login Handler
		livefyre_login_handler = undefined;
	} // End of Check for Livefyre Login Handler
	vb_gigya_refresh();
}

function vb_gigya_livefyre_login_fail( consoleMessage ) {
	if ( gigya_livefyre_debug ) console.log( 'vb_gigya_livefyre_login_fail():', consoleMessage );
	alert( 'There was a problem logging you into Livefyre.' ); // DELETE (?)
	if ( livefyre_login_handler ) { // Check for Livefyre Login Handler
		livefyre_login_handler.failure();
	} // End of Check for Livefyre Login Handler
}

function vb_gigya_logout_listener() {
	if ( gigya_livefyre_debug ) console.log( 'vb_gigya_logout_listener(): Logging user out.' );
	deleteCookie( vb_lf_cookieName );
	return true;
}

</script>
