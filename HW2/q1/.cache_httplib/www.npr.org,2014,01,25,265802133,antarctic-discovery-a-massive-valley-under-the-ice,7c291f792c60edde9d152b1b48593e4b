 <!--googleon: index--><div class="storytitle">
      <h1>Antarctic Discovery: A Massive Valley Under The Ice</h1>
   <input type="hidden" id="title265802133" value="Antarctic Discovery: A Massive Valley Under The Ice"></input>
   <input type="hidden" id="modelShortUrl265802133" value="http://n.pr/1htnQvC"></input>
   <input type="hidden" id="modelFullUrl265802133" value="http://www.npr.org/2014/01/25/265802133/antarctic-discovery-a-massive-valley-under-the-ice"></input>
</div>

<!-- END CLASS="STORYTITLE" -->
<div id="story-meta">
      <div id="storybyline" class="  linkLocation">
            <div class="bucketwrap byline" id="res265877034" previewTitle="bylines">
                  <p class="byline">by <span>NPR Staff</span></p>
      </div>
      
<!-- END CLASS="BUCKETWRAP BYLINE" ID="RES265877034" PREVIEWTITLE="BYLINES" -->
   </div>
   
<!-- END ID="STORYBYLINE" CLASS="  LINKLOCATION" -->
   <div class="dateblock">
            <time datetime="2014-01-25"><span class="date">January 25, 2014</span><span class="time"> 4:00 PM ET</span></time>
   </div>
</div>

<!-- END ID="STORY-META" -->
<div id="primaryaudio" class="storylocation linkLocation">
