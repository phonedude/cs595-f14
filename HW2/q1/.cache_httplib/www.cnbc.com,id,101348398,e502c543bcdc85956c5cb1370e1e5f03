		CNBC_Utils.execute('get quotes', function() {
			
			
				var tableChartRenderer = new CNBC_Quotes.TableChartRenderer();
			
			
			
			
			
			var chartApiUrl =  'http://api-chart.cnbc.com/api/chart/chart.asp';

			var quoteService = 'http://quote.cnbc.com/quote-html-webservice/quote.htm';
			var quoteServiceParams = 'requestMethod=quick&exthrs=1&noform=1&fund=1&output=jsonp&symbols=';
			var partnerId = 2;

			var quoteUrl  = quoteService + '?partnerId=' + partnerId + '&' + quoteServiceParams;

			var futureQuoteUrl = 'http://quote.cnbc.com/quote-html-webservice/fvquote.htm';

			var futureQuoteParams = 'requestMethod=quick&noform=1&realtime=0&client=fairValue&output=jsonp&symbols=';

			var futureUrl =  futureQuoteUrl + '?' + futureQuoteParams;

			var settings = {
			    maxSymbolsPerRequest: 30
			    
			    ,streaming: true
			  	, streamingInterval: 10000
			  	
			  	
			  , detailedQuoteBase: CNBC_Settings.baseurls.detailedquotebase
			};

			CNBC_Quotes.init(chartApiUrl, [
				
				{
					url: quoteUrl
					, listeners: [null, tableChartRenderer]
				  	, settings: settings
				}
				
				
			]);			
		});
	

	
