<script type="text/javascript">
function subfeed(email, interestId, groupId, source) {
	var action = $("#actionCheck").attr("checked");
	if (!action) {
		return;
	}
	if (!source) {
		source = 'nrdcswitch_subscribenofmi';
	}
	$.post('/js/convio_api.php', {
	    source: source,
		add_interest_ids: interestId,
	    add_group_ids: groupId,
		primary_email: email
	});
}

$('#fmi').submit(function(evt) {
	evt.preventDefault();
	var email = $(this).find('input[name="email"]').val(),
		uri = 'http://feedburner.google.com/fb/a/mailverify?uri=switchboard_plehner'
			+ '&email=' + encodeURIComponent(email);
	window.open(uri, 'fmi', 'scrollbars=yes,width=550,height=520');
	_gaq.push(['_setAccount', 'UA-532044-14']);
	_gaq.push(['_trackEvent', 'Subscription', 'Subscribe', '/outgoing/fmi_plehner']);
	subfeed(email, '1481', '46521');
	return false;
});
</script> 

