					<div class="textwidget"><div id="sidebar-popular-aggregate" class="widget MostPopularWidget"></div>
<script type="text/javascript">
    (function( $ ) {
    	$(document).ready(function() {
	        var items=[];
	        $.getJSON('http://www.wired.com/wiredcms/chartbeat.json', function( data ) {
	            var cnt=0;
	            items.push('<h4>TRENDING NOW ON WIRED</h4>');
	            $.each( data.pages, function( idx, page ) {
	                if( page.path === 'www.wired.com/' ) {
	                    return true;
	                }

	                if( cnt === 0 ) {
	                    most_ppl = page.stats.people;
	                }

	                ppl = page.stats.people;
	                var pop_opcty = (ppl/most_ppl);
	                var pop_width = Math.round( pop_opcty * 250 );
	                pop_opcty = pop_opcty < 0.25 ? 0.25 : pop_opcty;
	                pop_width = pop_width < 10 ? 10 : pop_width;
	                s_title = page.title.split('|');
	                var row_c = ( cnt % 2 ) === 0 ? 'even' : 'odd';
	                cnt++;

	                items.push('<a class="module-mostpopular" href="http://'+page.path+'"><div class="'+row_c+'"><div class="sotw_link_popular"><p>'+s_title[0].trim()+'</p></div>');
	                items.push('<div class="popularity-line" style="width:'+pop_width+'px; opacity:'+pop_opcty+';"><!-- '+ppl+' | '+pop_width+' | '+pop_opcty+'--></div></div></a>');
	            });
	            $(items.join('')).appendTo($('#sidebar-popular-aggregate' ) );
	        });
	        // console.log('TRENDING NOW ON WIRED partial-sidebar-popular complete');
        });
    })(jQuery);
</script></div>
