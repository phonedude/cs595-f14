params += ', height='+screen.height;
params += ', top=0, left=0'
params += ', fullscreen=yes, scrollbars = yes, resizable=yes';

slideWin = window.open(url, 'popup', params);
if(window.focus) {
slideWin.focus();
}
return false;
}

</script>

