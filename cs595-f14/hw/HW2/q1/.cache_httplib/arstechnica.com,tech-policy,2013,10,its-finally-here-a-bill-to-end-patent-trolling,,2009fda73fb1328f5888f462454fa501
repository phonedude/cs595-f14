  ars.ARTICLE = {"url":"http:\/\/arstechnica.com\/tech-policy\/2013\/10\/its-finally-here-a-bill-to-end-patent-trolling\/","short_url":"http:\/\/ars.to\/Hfk250","title":"Finally, a bill to end patent trolling","author":334677,"id":360663,"topic":1222187,"promoted":[],"single_page":false,"comments":83,"fullwidth":false};
