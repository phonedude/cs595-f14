  ars.ARTICLE = {"url":"http:\/\/arstechnica.com\/information-technology\/2013\/10\/the-navys-newest-warship-is-powered-by-linux\/","short_url":"http:\/\/ars.to\/19LO7yE","title":"The Navy\u2019s newest warship is powered by Linux","author":314884,"id":355955,"topic":1221629,"promoted":[],"single_page":false,"comments":205,"fullwidth":false};
