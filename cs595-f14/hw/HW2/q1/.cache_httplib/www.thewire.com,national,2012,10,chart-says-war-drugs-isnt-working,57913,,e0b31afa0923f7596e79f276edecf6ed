function afterFinished_1406() {
    Atlantic.Ad = Atlantic.Ad || {};
    Atlantic.Ad.p39_categories = p39_KVP_Short('','').split('=').slice(1);
    Atlantic.Ad.manager.loadGoogle();
    Atlantic.Ad.manager.display();
}
