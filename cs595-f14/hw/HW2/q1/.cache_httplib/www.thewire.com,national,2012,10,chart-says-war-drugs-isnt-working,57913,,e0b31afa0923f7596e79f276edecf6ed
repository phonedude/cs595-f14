<!-- Size Listeners -->
<script>
    // Logo ad enabled
    Atlantic.Ad.sizeListener("logo", function($unit, size){
        if (size !== false) {
            $('[data-enable-if-ad=ad-logo]').show();        
        };
    });
</script>


