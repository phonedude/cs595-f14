        <script type="text/javascript"> 
    /* The comment count for the main site is currently set in jquery.start.js. */
    var disqus_shortname = 'theatlantic'; // required: replace example with your forum shortname
 
	// meant to be overridden
	if (typeof window.onDisqusCommentsLoaded == 'undefined') {
		window.onDisqusCommentsLoaded = function() {}
	}

    /* * * DON'T EDIT BELOW THIS LINE * * */
    (function () {
        var s = document.createElement('script'); s.async = true;
        s.type = 'text/javascript';
