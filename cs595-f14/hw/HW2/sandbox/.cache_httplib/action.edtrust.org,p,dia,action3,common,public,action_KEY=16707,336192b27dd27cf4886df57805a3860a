<script type="text/javascript">
	function submitForm(form) {
		//Check that any required fields are filled out
		var req = s$(form).find("input[name='required']").val();

		if (req) {
			var hasRequired=true;
			req=req.split(",");
			for (var i=0; i<req.length; i++){
				if (!req[i]) continue;
				var field=s$(form).find("select[name='"+req[i]+"'],input[name='"+req[i]+"']");
				//if there is no such field, continue on
				if (field.length==0) continue;
				var val=field.val();
				if (val==null || val.length==0){
					hasRequired=false;
					field.addClass("errorInput");
				}else{
					field.removeClass("errorInput");
				}
			}
		}
		if (hasRequired == false){
			s$("#errorMessage").html("<span class='error'>Please fill out all required fields</span>");
			return false;
		}
		
		s$('#sending').show();

		s$.post('/p/dia/action3/common/public/blinded/blind_submit.sjs', s$(form).serializeArray(),
			   function(res) {
				   if (res) {
					   var ii = res.indexOf("[URL]");
					   if (ii >= 0) {
						   s$.post(res.substr(ii + 5),
								  function(data) {
									  s$("#mainForm").html(data);
								  });
						   return;
					   }
				   }
				   s$("#mainForm").html(res);
			   });
		return false;
	}
</script>
<style>
select.errorInput,input.errorInput{
	border:3px solid red;
}
