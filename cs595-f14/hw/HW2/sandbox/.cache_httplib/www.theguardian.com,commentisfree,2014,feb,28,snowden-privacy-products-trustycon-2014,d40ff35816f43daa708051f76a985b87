		var gcse = document.createElement('script');
		gcse.type = 'text/javascript';
		gcse.async = true;
		gcse.src = 'https://www.google.com/cse/cse.js?cx=' + cx;
		var s = document.getElementsByTagName('script')[0];
		s.parentNode.insertBefore(gcse, s);
	})();


	
</script>



<script>
	if(jQuery.support.cors && guardian.page.contentTypes.indexOf("gallery") > -1) {
		jQuery('.page-bottom-share-links').after('<div class="related-galleries-slot"></div>');
		jQuery('.related-galleries-slot').load('http://gdn-galleries.appspot.com/components/galleries/related/box?page-url=' + window.location.href);
	}
</script>
</body>

</html>
