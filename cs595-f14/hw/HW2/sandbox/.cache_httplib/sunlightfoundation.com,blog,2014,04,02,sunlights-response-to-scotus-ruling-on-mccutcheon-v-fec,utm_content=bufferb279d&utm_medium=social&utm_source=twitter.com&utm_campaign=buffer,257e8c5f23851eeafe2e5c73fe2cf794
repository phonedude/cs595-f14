		function resizeIframe(iframe, width, height) {
			var frame = document.getElementById('iframe-' + iframe);
			frame.height = parseInt(height) + 20;
			frame.width = parseInt(width);
		}

		var newComment = function(comment) {
			var url = window.location.href + "disqus/";
			var params = {
