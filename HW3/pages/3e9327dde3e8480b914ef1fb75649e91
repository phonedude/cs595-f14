    function disqus_config() {
        this.callbacks.afterRender = [function () {
            $('li a.dsq-subscribe-rss em').text('View this stream via RSS');
            if ($('.dsq-more-button').length > 0) {
                $('a.dsq-brlink').addClass('buttonPresent');
