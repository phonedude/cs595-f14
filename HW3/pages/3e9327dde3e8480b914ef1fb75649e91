   <script>
       var dlrbody = $('body'); //Cache this for performance - thanks SO!!
       var vidHeight;
       function vidWidgetPos() {
           var vbw = $(".hoBlock").width();
           var ww = $(window).width();
           var vbww = (ww - vbw) / 2;
           /*
           if (ww < 500) {
               $(".vidHolder").css("max-width", ww + "px");
           }
           else {
               $(".vidHolder").css("max-width", vbw + "px");
           }
           */
           var heh = $("#herohero").height();
           var vbh = $(".hoBlock").height();
           var vbhh = (heh-vbh)/2;
           $(".heroOverlay").css("height", heh + "px" );
           // $(".vidBlock").css("bottom", vbhh + "px");
           if ($(window).width() < 980) {
               $(".hoplay").css("display", "block");
           }
           else {
               $(".hoplay").css("display", "none");
           }
         
           return;
           if ($(window).width() < 800) {
               $(".heroOverlay").css("display", "none");
           }
           else {
               $(".heroOverlay").css("display", "block");
           }
           var tl = 20;
           if (dlrbody.width() > 1200) {
               tl = ((dlrbody.width() - 1200) / 2) + 10;
           } 
           $(".heroOverlay").css("left", tl + "px");
       }
       function scrollVidWidget() {
           var see = $("#tgnbody").scrollTop();
           var t = parseInt($(".socbanner").css("height"), 10);
           if ((t + see + vidHeight) < 564) {
               $(".heroOverlay").css("position", "fixed");
               $(".heroOverlay").css("top", t + "px");
           }
           else {
               $(".heroOverlay").css("position", "absolute");
               $(".heroOverlay").css("top", (564-vidHeight) + "px");
           }
       }
       $(window).resize(function () {
           setTimeout(vidWidgetPos, 250);
       });


       $(document).ready(function () {
           vidHeight = parseInt($(".heroOverlay").css("height"));
           vidWidgetPos();
           // out for new vidWidgetPos();
           /* no parallax */
           /* out for new 
           $('#tgnbody').bind('scroll', function (event) {
               //scrollVidWidget();
               //setTimeout(scrollVidWidget, 250);
               var see = $("#tgnbody").scrollTop();
               $(".hoBlock").css("opacity", 1 - (see / 564)); //: 0.396963; transform: translate3d(0px, 12.0607px, 0px);
               var y = (see / 564) * 60;
               $(".hoBlock").css("transform", "translate3d(0px, " + y + "px, 0px)");
           });
           */
       });
</script>
                
 

